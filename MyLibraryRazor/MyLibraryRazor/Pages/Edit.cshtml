@page
@model MyLibraryRazor.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.BookId" />
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Subtitle" class="control-label"></label>
                <input asp-for="Book.Subtitle" class="form-control" />
                <span asp-validation-for="Book.Subtitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.BookAuthors" class="control-label"></label>
                <input type="text" list="authorlist" class="form-control" />
                <datalist id="authorlist">
                    <select asp-for="Book.BookAuthors" class="form-control" asp-items="ViewBag.AuthorList"></select>
                </datalist>
                <span asp-validation-for="Book.PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PublisherId" class="control-label"></label>
                <input type="text" list="publist" class="form-control" />
                <datalist id="publist">
                    <select asp-for="Book.PublisherId" class="form-control" asp-items="ViewBag.Publisher"></select>
                </datalist>
                <span asp-validation-for="Book.PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PublishDate" class="control-label"></label>
                <input asp-for="Book.PublishDate" class="form-control" />
                <span asp-validation-for="Book.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.LeadSentence" class="control-label"></label>
                <input asp-for="Book.LeadSentence" class="form-control" />
                <span asp-validation-for="Book.LeadSentence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.ImageUrl" class="control-label"></label>
                <input asp-for="Book.ImageUrl" class="form-control" />
                <span asp-validation-for="Book.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
